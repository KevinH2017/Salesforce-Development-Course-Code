<aura:component>
    <aura:attribute name="label" type="String" />
    <aura:attribute name="open" type="Boolean" default="false" />

    <!-- Loads external CSS and JavaScript libraries after you upload them as static resources, allowing you to use them instantly -->
    <ltng:require
        scripts="{!$Resource.FitText}"
        afterScriptsLoaded="{!c.scriptsLoaded}" />

    <!-- Register the block click event and sends it to BlockClickEvent.evt -->
    <aura:registerEvent name="onclick" type="c.BlockClickEvent"/>

    <!-- Block tile container and uses the blockClickHandler function in BlockController.js -->
    <div class="board-block slds-align_absolute-center slds-var-m-around_medium slds-var-p-around_medium" onclick="{!c.blockClickHandler}">
        <aura:if isTrue="{!v.open}">
            <div>{!v.label}</div>
        </aura:if>
    </div>

</aura:component>