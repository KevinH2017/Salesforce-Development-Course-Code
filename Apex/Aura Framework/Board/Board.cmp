<aura:component implements="flexipage:availableForAllPageTypes">
    <!-- Attributes are like variables, initialized with their name and data type -->
    <aura:attribute name="mode" type="String" default="easy" />
    <aura:attribute name="words" type="List" access="private" />
    <aura:attribute name="winWord" type="String" access="private" />
    <aura:attribute name="clickCount" type="Integer" default="0" access="private" />
    <aura:attribute name="blockSize" type="Integer" access="private" />
    <aura:attribute name="result" type="String" />

    <!-- Accesses JavaScript files to initialize and render page -->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <!-- <aura:handler name="render" value="{!this}" action="{!c.doRender}" /> -->
     <aura:handler name="onclick" event="c.BlockClickEvent" action="{!c.blockClickHandler}" />

    <div class="board">
        <lightning:layout multipleRows="true">
            <lightning:layoutItem padding="around-small">
                <div class="slds-text-heading_medium">
                    <span class="win-word">    
                        WORD : {!v.winWord}
                    </span>
                </div>
            </lightning:layoutItem>        
            <lightning:layoutItem padding="around-small">
                <div class="slds-text-heading_medium">    
                    Moves Left : {! (3 - v.clickCount)}
                </div>
            </lightning:layoutItem>
        </lightning:layout>
    
        <!-- Automatically spaces out rows to a size total of 12 in each row -->
        <lightning:layout multipleRows="true">
            <!-- Loops and creates columns and rows of random words -->
            <aura:iteration items="{!v.words}" var="word">
                <lightning:layoutItem size="{!v.blockSize}" padding="around-small">
                    <c:Block label="{!word}" onclick="{!c.blockClickHandler}"></c:Block>
                </lightning:layoutItem>
            </aura:iteration>
        </lightning:layout>
    </div>
</aura:component>